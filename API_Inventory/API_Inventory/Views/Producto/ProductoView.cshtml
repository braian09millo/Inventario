
@{
    ViewBag.Title = "ProductoView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">PRODUCTOS</h2>
<hr />
<div class="row">
    <div class="col-sm-2">
        <button class="btn btn-success" onclick="abrirModalProducto('A')">Agregar Producto</button>
    </div>
    <div class="col-sm-10">
        <input type="text" id="txtBusqueda" class="form-control" placeholder="Buscar por descripción"/>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        @Html.Partial("ProductoPanel")
    </div>
</div>

<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" aria-labelledby="lblModalProducto">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="limpiarDatos()"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="lblModalProducto">AGREGAR PRODUCTO</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <input type="hidden" class="form-control" id="txtID" placeholder="ID Producto" />
                        <input type="text" class="form-control" id="txtDescripcion" placeholder="Producto"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="guardarProducto()">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="limpiarDatos()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script>

    $("#txtBusqueda").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#tblProductos tbody tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });

</script>